{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@heroui/standard/tsconfig/next.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/.source": ["./.source/index.ts"],
      "@/*": ["./src/*"],
      "~env": ["./env.ts"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "env.ts", "next-env.d.ts", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
